#define ZMK_POINTING_DEFAULT_MOVE_VAL 1800
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20

#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define MOUSE 4
#define MOUSEFAST 5
#define MOUSESUPERFAST 6
#define MOUSESLOW 7

// dt-formatter: indent = "  "
// dt-formatter: reindentMultilineIntegerCells = "dedent"

&mmv { acceleration-exponent = <0>; };

&mmv_input_listener {
  set_mouse_fast {
    layers = <MOUSEFAST>;
    input-processors = <&zip_xy_scaler 2 1>;
  };
};

&mmv_input_listener {
  set_mouse_super_fast {
    layers = <MOUSESUPERFAST>;
    input-processors = <&zip_xy_scaler 4 1>;
  };
};

&mmv_input_listener {
  set_mouse_slow {
    layers = <MOUSESLOW>;
    input-processors = <&zip_xy_scaler 1 2>;
  };
};

/ {
  behaviors {
    hm: homerow_mods {
      compatible = "zmk,behavior-hold-tap";
      label = "HOMEROW_MODS";
      #binding-cells = <2>;
      tapping-term-ms = <300>;
      flavor = "balanced";
      bindings = <&kp>, <&kp>;

      quick-tap-ms = <200>;
      require-prior-idle-ms = <150>;
    };

    skq: sticky_key_quick_release {
      compatible = "zmk,behavior-sticky-key";
      bindings = <&kp>;
      #binding-cells = <1>;
      release-after-ms = <400>;
      quick-release;
      ignore-modifiers;
    };

    slq: slq {
      compatible = "zmk,behavior-sticky-key";
      label = "SLQ";
      bindings = <&mo>;
      #binding-cells = <1>;
      release-after-ms = <2000>;
      quick-release;
      ignore-modifiers;
    };

    moto: moto {
      compatible = "zmk,behavior-hold-tap";
      label = "MOTO";
      bindings = <&mo>, <&to>;

      #binding-cells = <2>;
      flavor = "hold-preferred";
      tapping-term-ms = <300>;
    };
  };

  combos { compatible = "zmk,combos"; };

  keymap {
    compatible = "zmk,keymap";

    base {
      bindings = <
&kp GRAVE   &kp Q        &kp W        &kp F       &kp P       &kp B        &kp J        &kp L       &kp U       &kp Y        &kp SEMI     &kp BSPC
&kp TAB     &hm GLOBE A  &hm LCTRL R  &hm LALT S  &hm LGUI T  &kp G        &kp M        &hm RGUI N  &hm RALT E  &hm RCTRL I  &hm GLOBE O  &kp ENTER
&caps_word  &kp Z        &kp X        &kp C       &kp D       &kp V        &kp K        &kp H       &kp APOS    &kp DOT      &kp COMMA    &to 1
                                      &kp ESC     &kp LSHFT   &kp SPACE    &key_repeat  &moto 2 2   &moto 3 3
      >;
    };

    pure-typing {
      bindings = <
&kp GRAVE   &kp Q        &kp W        &kp F       &kp P       &kp B        &kp J        &kp L       &kp U       &kp Y        &kp SEMI     &kp BSPC
&kp TAB     &kp A        &kp R        &kp S       &kp T       &kp G        &kp M        &kp N       &kp E       &kp I        &kp O        &kp ENTER
&caps_word  &kp Z        &kp X        &kp C       &kp D       &kp V        &kp K        &kp H       &kp APOS    &kp DOT      &kp COMMA    &to 0
                                      &kp ESC     &kp LSHFT   &kp SPACE    &key_repeat  &moto 2 2   &moto 3 3
      >;
    };

    num+symbols {
      bindings = <
&trans  &kp GRAVE  &kp N7  &kp N8  &kp N9  &kp MINUS    &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp FSLH         &kp BSLH     &trans     &trans
&trans  &kp APOS   &kp N4  &kp N5  &kp N6  &kp EQUAL    &kp LBKT              &kp RBKT               &kp EXCLAMATION  &kp AT_SIGN  &kp SEMI   &trans
&trans  &trans     &kp N1  &kp N2  &kp N3  &kp N0       &kp LESS_THAN         &kp GREATER_THAN       &kp APOS         &kp DOT      &kp COMMA  &trans
                           &to 0   &trans  &trans       &trans                &none                  &trans
      >;
    };

    nav+scrl {
      bindings = <
&kp GRAVE     &kp F2     &kp F3          &kp F4          &kp F5        &kp F6             &none     &to 4      &none      &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS  &kp C_AC_DESKTOP_SHOW_ALL_APPLICATIONS  &kp DELETE
&kp TAB       &kp GLOBE  &kp LCTRL       &kp LALT        &kp LGUI      &kp LSHFT          &kp LEFT  &kp DOWN   &kp UP     &kp RIGHT                          &to 8                                   &to 0
&kp CAPSLOCK  &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT    &kp HOME  &kp PG_DN  &kp PG_UP  &kp END                            &kp C_AC_BACK                           &kp C_AC_FORWARD
                                         &to 0           &trans        &trans             &trans    &trans     &none
      >;
    };

    MOUSE {
      bindings = <
&kp GRAVE     &kp F2     &to 6           &to 5           &to 4         &to 7              &to 3      &none           &mmv MOVE_UP    &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS  &kp C_AC_DESKTOP_SHOW_ALL_APPLICATIONS  &kp DELETE
&kp TAB       &kp GLOBE  &kp LCTRL       &kp LALT        &kp LGUI      &kp LSHFT          &none      &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT                    &to 8                                   &to 0
&kp CAPSLOCK  &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT    &kp HOME   &kp PG_DN       &kp PG_UP       &kp END                            &kp C_AC_BACK                           &kp C_AC_FORWARD
                                         &to 0           &trans        &mkp LCLK          &mkp RCLK  &trans          &none
      >;
    };

    MOUSEFAST {
      bindings = <
&kp GRAVE     &kp F2     &to 6           &to 5           &to 4         &to 7              &to 3      &none           &mmv MOVE_UP    &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS  &kp C_AC_DESKTOP_SHOW_ALL_APPLICATIONS  &kp DELETE
&kp TAB       &kp GLOBE  &kp LCTRL       &kp LALT        &kp LGUI      &kp LSHFT          &none      &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT                    &to 8                                   &to 0
&kp CAPSLOCK  &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT    &kp HOME   &kp PG_DN       &kp PG_UP       &kp END                            &kp C_AC_BACK                           &kp C_AC_FORWARD
                                         &to 0           &trans        &mkp LCLK          &mkp RCLK  &trans          &none
      >;
    };

    MOUSESUPERFAST {
      bindings = <
&kp GRAVE     &kp F2     &to 6           &to 5           &to 4         &to 7              &to 3      &none           &mmv MOVE_UP    &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS  &kp C_AC_DESKTOP_SHOW_ALL_APPLICATIONS  &kp DELETE
&kp TAB       &kp GLOBE  &kp LCTRL       &kp LALT        &kp LGUI      &kp LSHFT          &none      &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT                    &to 8                                   &to 0
&kp CAPSLOCK  &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT    &kp HOME   &kp PG_DN       &kp PG_UP       &kp END                            &kp C_AC_BACK                           &kp C_AC_FORWARD
                                         &to 0           &trans        &mkp LCLK          &mkp RCLK  &trans          &none
      >;
    };

    MOUSESLOW {
      bindings = <
&kp GRAVE     &kp F2     &to 6           &to 5           &to 4         &to 7              &to 3      &none           &mmv MOVE_UP    &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS  &kp C_AC_DESKTOP_SHOW_ALL_APPLICATIONS  &kp DELETE
&kp TAB       &kp GLOBE  &kp LCTRL       &kp LALT        &kp LGUI      &kp LSHFT          &none      &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT                    &to 8                                   &to 0
&kp CAPSLOCK  &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT    &kp HOME   &kp PG_DN       &kp PG_UP       &kp END                            &kp C_AC_BACK                           &kp C_AC_FORWARD
                                         &to 0           &trans        &mkp LCLK          &mkp RCLK  &trans          &none
      >;
    };

    fn+media {
      bindings = <
&kp F1      &kp F2        &kp F3        &kp F4        &kp F5        &kp F6          &kp F7      &kp F8        &kp F9        &kp F10     &kp F11    &kp F12
&trans      &kp GLOBE     &kp LCTRL     &kp LALT      &kp LGUI      &trans          &trans      &kp RGUI      &kp RALT      &kp RCTRL   &kp GLOBE  &to 0
&bt BT_CLR  &bt BT_SEL 4  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0    &kp K_MUTE  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_PREV  &kp C_PP   &kp C_NEXT
                                        &to 0         &trans        &trans          &trans      &moto 2 2     &moto 3 3
      >;
    };
  };
};
